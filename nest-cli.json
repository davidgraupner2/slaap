{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/slaap/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/slaap/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/slaap",
  "projects": {
    "slaap": {
      "type": "application",
      "root": "apps/slaap",
      "entryFile": "main",
      "sourceRoot": "apps/slaap/src",
      "compilerOptions": {
        "assets": ["config/**/*"],
        "watchAssets": true,
        "tsConfigPath": "apps/slaap/tsconfig.app.json"
      }
    },
    "data-svc": {
      "type": "application",
      "root": "apps/data-svc",
      "entryFile": "main",
      "sourceRoot": "apps/data-svc/src",
      "compilerOptions": {
        "assets": ["config/**/*"],
        "watchAssets": true,
        "tsConfigPath": "apps/data-svc/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "schema-svc": {
      "type": "application",
      "root": "apps/schema-svc",
      "entryFile": "main",
      "sourceRoot": "apps/schema-svc/src",
      "compilerOptions": {
        "assets": ["config/**/*"],
        "watchAssets": true,
        "tsConfigPath": "apps/schema-svc/tsconfig.app.json"
      }
    },
    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    }
  }
}
