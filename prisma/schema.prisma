generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id          Int          @id @default(autoincrement())
  tenant      Tenant       @relation(fields: [tenant_id], references: [id])
  tenant_id   Int
  name        String
  permissions Permission[]
  users       User[]

  @@unique([tenant_id, name])
  @@map("groups")
}

model Permission {
  id         Int       @id(map: "PK_3b8b97af9d9d8807e41e6f48362") @default(autoincrement())
  created_at DateTime  @default(now()) @db.Timestamp(6)
  updated_at DateTime  @default(now()) @db.Timestamp(6)
  deleted_at DateTime? @db.Timestamp(6)
  created_by Int?
  updated_by Int?
  tenant_id  Int
  table_name String    @db.VarChar
  permission String    @db.VarChar
  groups     Group[]

  @@map("permissions")
}

model Tenant {
  id          Int       @id(map: "PK_da8c6efd67bb301e810e56ac139") @default(autoincrement())
  created_at  DateTime  @default(now()) @db.Timestamp(6)
  updated_at  DateTime  @default(now()) @db.Timestamp(6)
  deleted_at  DateTime? @db.Timestamp(6)
  created_by  Int?
  updated_by  Int?
  name        String    @db.VarChar
  description String?   @db.VarChar
  is_public   Boolean   @default(false)
  owner       User?     @relation("owner", fields: [owned_by], references: [id])
  owned_by    Int?
  groups      Group[]
  users       User[]

  @@map("tenants")
}

model User {
  id                Int       @id(map: "PK_cace4a159ff9f2512dd42373760") @default(autoincrement())
  is_active         Boolean   @default(false)
  created_at        DateTime  @default(now()) @db.Timestamp(6)
  updated_at        DateTime  @default(now()) @db.Timestamp(6)
  deleted_at        DateTime? @db.Timestamp(6)
  created_by        Int?
  updated_by        Int?
  first_name        String    @db.VarChar
  last_name         String    @db.VarChar
  user_name         String?   @db.VarChar
  email             String    @unique(map: "UQ_e12875dfb3b1d92d7d7c5377e22") @db.VarChar
  password          String    @db.VarChar
  is_email_verified Boolean   @default(false)
  is_msp            Boolean   @default(false)
  owned_tenants     Tenant[]  @relation("owner")
  tenants           Tenant[]
  groups            Group[]

  @@map("users")
}
